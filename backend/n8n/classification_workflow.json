        {
            "parameters": {
                "jsCode": "try {\n  if (!$input.item || !$input.item.json) {\n     return { json: { label: 'error', score: 0, error: 'No input items received', raw: {} } };\n  }\n  \n  const input = $input.item.json;\n  \n  // Check for n8n error structure\n  if (input.error) {\n      return { json: { label: 'error', score: 0, error: JSON.stringify(input), raw: input } };\n  }\n\n  if (!input.choices) {\n     return { json: { label: 'error', score: 0, error: 'No choices in response', raw: input } };\n  }\n  let content = input.choices[0].message.content;\n  \n  // Strip markdown code blocks if present\n  content = content.replace(/^```json\\s*/, '').replace(/\\s*```$/, '');\n  \n  const parsed = JSON.parse(content);\n  \n  return {\n    json: {\n      ...parsed,\n      model: \"groq/llama-3.3-70b-versatile\"\n    }\n  };\n} catch (error) {\n  return {\n    json: {\n      label: \"error\",\n      score: 0,\n      error: error.message,\n      raw: ($input.item ? $input.item.json : {})\n    }\n  };\n}"
